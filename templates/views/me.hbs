<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Me</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="top">
        <div class="info">
          <img src={{_doc.img}} />
          <h2 class="userName" id={{_doc._id}}>
            Hey,
            {{_doc.name}}<br /><span>Start managing your tasks</span>
          </h2>
        </div>
        <div class="options">
          <div class="settings">
            <img
              class="gearicon"
              onclick="toggle()"
              src="https://img.icons8.com/ios-glyphs/60/000000/gear.png"
            />
            <div>
              <button class="logout">
                <img
                  src="https://img.icons8.com/ios-filled/50/000000/logout-rounded-left.png"
                />Log-out
              </button>
            </div>
            <div>
              <button class="logoutall">
                <img
                  src="https://img.icons8.com/ios-filled/50/000000/logout-rounded-left.png"
                />Log-out All
              </button>
            </div>
          </div>
        </div>
      </div>

      <div class="insertForm">
        <form method="post" id="insertForm">
          <input
            type="text"
            name="title"
            id="title"
            required
            placeholder="Title"
          />
          <input
            type="text"
            name="description"
            id="description"
            required
            placeholder="Description"
          />
          <select name="completed" id="completed" required>
            <option disabled selected value="None">Completed?</option>
            <option value="true">True</option>
            <option value="false">False</option>
          </select>
          <div class="formbuttons">
            <input type="submit" class="submit" value="Submit" />
            <input
              id="edit"
              class="edit editsubmit hidden"
              type="submit"
              value="Edit"
            />
          </div>
        </form>
        <button id="cancel" class="edit cancel hidden">Cancel</button>
      </div>

      <div class="taskarea">
        <h2>Your Tasks</h2>
        <div class="modal hidden">
          <div id="loading-bar-spinner" class="spinner">
            <div class="spinner-icon"></div></div>
        </div>
        <div id="mainarea">
        </div>
      </div>
    </div>
  </body>
  <script src="/js/script.js"></script>
</html>